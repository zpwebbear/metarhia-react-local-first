{
  "name": "backend",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=test node --test --test-concurrency=1 test/**/*.test.js",
    "test:watch": "NODE_ENV=test node --test --watch test/**/*.test.js",
    "test:expenses": "NODE_ENV=test node --test test/routes/expenses.test.js -l debug",
    "test:expenses:watch": "NODE_ENV=test node --test --watch test/routes/expenses.test.js",
    "test:categories": "NODE_ENV=test node --test test/routes/categories.test.js -l debug",
    "test:statistics": "NODE_ENV=test node --test test/routes/statistics.test.js -l debug",
    "test:setup": "NODE_ENV=test node -e \"require('./test/test-migrator').TestMigrator.prototype.resetDatabase.call(new (require('./test/test-migrator')).TestMigrator())\"",
    "test:teardown": "NODE_ENV=test node -e \"require('./test/test-migrator').TestMigrator.prototype.dropTestDatabase.call(new (require('./test/test-migrator')).TestMigrator())\"",
    "start": "fastify start -l info app.js",
    "dev": "fastify start -w -l info -P app.js",
    "server": "node server.js",
    "docker:dev": "docker compose up",
    "migrate": "node migrate.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/postgres": "^6.0.2",
    "@fastify/sensible": "^6.0.0",
    "@fastify/websocket": "^11.2.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "pg": "^8.16.3",
    "postgrator": "^8.0.0"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1"
  }
}
